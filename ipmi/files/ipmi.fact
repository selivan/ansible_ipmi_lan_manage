#!/bin/bash
#set -x

channel=1

echo "{"
echo "  \"lan_$channel\": {"

first_line=1
sudo ipmitool lan print $channel | tr -d ' ' | while read line; do
  key=`echo $line | cut -d: -f 1 | tr -d '.' | tr -d [0-9] | tr '[:upper:]' '[:lower:]'`
  if [ -n "$key" ]; then
    if [ $first_line -eq 1 ]; then
      first_line=0
    else
      echo ","
    fi
    value=`echo $line | cut -d: -f 2-`;
    echo -n "    \"$key\": \"$value\""
  fi
done

echo
echo "  }"
echo "}"

